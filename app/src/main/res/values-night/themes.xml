<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calendula" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--  App color.  -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSecondary">@color/white_secondary</item>
        <item name="colorAccent">@color/black_secondary</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="CustomBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/black_secondary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_sheet</item>
    </style>

</resources>