<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- App Theme -->
    <style name="Theme.Calendula" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--  App color.  -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSecondary">@color/white_secondary</item>
        <item name="colorAccent">@color/black_secondary</item>
        <item name="colorOnSecondary">@color/black_gray</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- BottomSheet Theme -->
    <style name="CustomBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/black_secondary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corner_sheet</item>
    </style>

    <!-- AlertDialog Theme -->
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner_dialog</item>
        <item name="android:textColorPrimary">@color/white_secondary</item>
        <item name="android:textColorSecondary">@color/white_secondary</item>
        <item name="android:textColorAlertDialogListItem">@color/white_secondary</item>
        <item name="android:colorControlActivated">@color/main</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="colorOnBackground">@color/black_secondary</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main</item>
    </style>

    <!-- DatePicker Theme -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rounded_corner_dialog</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="colorOnBackground">@color/black_secondary</item>
        <item name="colorAccent">@color/main</item>
        <item name="android:colorControlActivated">@color/main</item>
        <item name="android:textColorSecondary">@color/main</item>
        <item name="android:textColorPrimary">@color/white_secondary</item>
        <item name="android:textColorPrimaryInverse">@color/black_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/black_secondary</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/main</item>
    </style>

    <!-- TimePicker Theme -->
    <style name="CustomTimePickerTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rounded_corner_dialog</item>
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
        <item name="colorOnBackground">@color/black_secondary</item>
        <item name="android:textColorPrimary">@color/white_secondary</item>
        <item name="android:colorControlNormal">@color/main</item>
    </style>

    <style name="CustomTimePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>