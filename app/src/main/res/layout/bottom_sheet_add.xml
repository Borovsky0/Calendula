<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="17dp">

        <ImageView
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_ok"
            app:tint="?attr/colorSecondary"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/drag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_drag"
            android:layout_toLeftOf="@+id/button_ok"
            android:layout_toRightOf="@+id/button_cancel"/>

        <ImageView
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_cancel"
            app:tint="?attr/colorSecondary"
            android:layout_alignParentStart="true"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="?attr/colorSecondary"
        android:drawableEnd="@drawable/ic_name"
        android:drawableTint="?attr/colorSecondary"
        android:hint="@string/todo"
        android:textColorHint="?attr/colorOnSecondary"
        android:maxLength="100"
        android:singleLine="true"
        android:textColor="?attr/colorSecondary"
        android:textCursorDrawable="@drawable/color_selector_cursor"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="?attr/colorSecondary"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_date"
        android:drawableTint="?attr/colorSecondary"
        android:focusable="false"
        android:inputType="date"
        android:textColor="?attr/colorSecondary"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="?attr/colorSecondary"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_repeat"
        android:drawableTint="?attr/colorSecondary"
        android:focusable="false"
        android:inputType="none"
        android:textColor="?attr/colorSecondary"
        android:textSize="17sp"
        android:text="@string/once"/>

    <EditText
        android:id="@+id/editTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="?attr/colorSecondary"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_time"
        android:drawableTint="?attr/colorSecondary"
        android:focusable="false"
        android:inputType="date"
        android:text="--:--"
        android:textColor="?attr/colorSecondary"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/button_tag_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_text"
            android:src="@drawable/ic_tag_add"/>

    </LinearLayout>

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/colorSecondary"
        android:drawableEnd="@drawable/ic_text_note"
        android:drawableTint="?attr/colorSecondary"
        android:hint="@string/text_note"
        android:textColorHint="?attr/colorOnSecondary"
        android:maxLength="100"
        android:textColor="?attr/colorSecondary"
        android:textCursorDrawable="@drawable/color_selector_cursor"
        android:textSize="17sp" />

</LinearLayout>